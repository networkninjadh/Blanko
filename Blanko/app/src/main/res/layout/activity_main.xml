<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity"
                android:orientation="horizontal">
    <VideoView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/videoView"
        android:layout_gravity="center" />
    <FrameLayout
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="right|bottom"
        android:background="@android:color/transparent"
        android:layout_marginRight="20dp"
        android:id="@+id/directional_buttons"
        android:layout_marginBottom="20dp">
        <ImageButton
            android:id="@+id/down_button"
            android:src="@drawable/down_button"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="bottom|center_horizontal"/>
        <ImageButton
            android:id="@+id/up_button"
            android:src="@drawable/up_button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            android:layout_gravity="top|center_horizontal"/>
        <ImageButton
            android:id="@+id/right_button"
            android:src="@drawable/right_button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            android:layout_gravity="right|center_vertical"/>
        <ImageButton
            android:id="@+id/left_button"
            android:src="@drawable/left_button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            android:layout_gravity="left|center_vertical"
            android:contentDescription="Move Left" />
    </FrameLayout>

    <SlidingDrawer
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:content="@+id/content"
        android:handle="@+id/handle"
        android:id="@+id/slidingDrawer"
        android:layout_gravity="center_horizontal|bottom">
        <ImageButton
            android:id="@+id/handle"
            android:src="@drawable/up_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            />
    </SlidingDrawer>

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#cd327880"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center_horizontal|bottom">
        <ImageButton
            android:id="@+id/laser_downButton"
            android:src="@drawable/down_button"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <ImageButton
            android:id="@+id/laser_button"
            android:src="@drawable/laser_button"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
        <ImageButton
            android:id="@+id/laser_upButton"
            android:src="@drawable/up_button"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <ImageButton
            android:id="@+id/docking_button"
            android:src="@drawable/docking_button"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
        <ImageButton
            android:id="@+id/power_button"
            android:src="@drawable/power_button"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
        <ImageButton
            android:id="@+id/night_button"
            android:src="@drawable/night_button"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
        <ImageButton
            android:id="@+id/light_button"
            android:src="@drawable/light_button"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
        <ImageButton
            android:id="@+id/video_button"
            android:src="@drawable/video_button"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
    </LinearLayout>
</FrameLayout>
